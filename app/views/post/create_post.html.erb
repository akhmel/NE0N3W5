<div class="col-md-4 col-md-offset-4">
<% unless @errors.blank? %>
	<div class="bg-danger">
		Errors:
	<ul>
	<% @errors.messages.each do |key,value| %>
		<% value.uniq.each do |message| %>
			<li><%= "#{key.to_s} #{message}" %></li>
		<% end %>
	<% end %>
	</ul>
	</div>
<% end %>

<%= form_tag("/newpost",method: "post") do %>
	<div class="form-group">
		<%= label_tag("Title") %>
	    <%= text_field_tag(:title, nil, class:"form-control") %>
    </div>
    <br/>
    <div class="form-group">
	    <%= label_tag("Content") %>
	    <%= text_area_tag(:content, nil, class:"form-control") %>
    </div>
    <br />
    <div class="form-group">
    	<center><%= submit_tag("Create Post",class:"btn btn-success") %></center>
    </div>
<% end %>
</div>